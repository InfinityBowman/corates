    "@tanstack/solid-query": "^5.90.18",
    "better-auth": "^1.4.9",
    "d3": "^7.9.0",
    "idb": "^8.0.3",
    "pdfjs-dist": "^5.4.530",
    "solid-icons": "^1.1.0",
    "solid-js": "^1.9.10",
    "y-indexeddb": "^9.0.12",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.28"
