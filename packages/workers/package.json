{
  "name": "@corates/workers",
  "version": "0.0.1",
  "private": true,
  "description": "Cloudflare Workers with Durable Objects",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:watch": "vitest",
    "logs": "pnpm wrangler tail corates-workers-prod",
    "clear-workers": "rm -rf .wrangler/state && pnpm run db:migrate",
    "db:migrate": "y | wrangler d1 migrations apply corates-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply corates-db --remote",
    "db:setup:prod": "wrangler d1 execute corates-db-prod --remote --file=migrations/0001_init.sql",
    "db:reset:prod": "./scripts/reset-db-prod.sh"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251126.0",
    "better-auth": "^1.4.1",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.7",
    "resend": "^6.5.2",
    "yjs": "^13.6.27",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.14",
    "vitest": "^4.0.13",
    "wrangler": "^4.52.1"
  }
}
