{
  "name": "@corates/workers",
  "version": "0.0.1",
  "private": true,
  "description": "Cloudflare Workers with Durable Objects",
  "main": "src/index.js",
  "license": "PolyForm-Noncommercial-1.0.0",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "test": "pnpm db:generate:test && vitest run",
    "test:watch": "vitest",
    "build": "pnpm --filter @corates/shared build",
    "logs": "pnpm wrangler tail corates-workers-prod",
    "clear-workers": "rm -rf .wrangler/state && pnpm run db:migrate",
    "db:generate": "drizzle-kit generate",
    "db:generate:test": "node ./scripts/generate-test-sql.mjs",
    "db:migrate": "y | wrangler d1 migrations apply corates-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply corates-db --remote",
    "db:setup:prod": "wrangler d1 execute corates-db-prod --remote --file=migrations/0001_init.sql",
    "db:reset:prod": "./scripts/reset-db-prod.sh",
    "user:make-admin:local": "node ./scripts/make-admin-local.mjs",
    "user:make-admin:prod": "node ./scripts/make-admin-prod.mjs",
    "openapi:generate": "node ./scripts/generate-openapi.mjs"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251220.0",
    "@corates/shared": "workspace:*",
    "better-auth": "1.4.5",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "lib0": "^0.2.115",
    "postmark": "^4.0.5",
    "stripe": "^20.1.0",
    "y-protocols": "^1.0.7",
    "yjs": "^13.6.28",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.15",
    "drizzle-kit": "^0.30.6",
    "vitest": "3.2.0",
    "wrangler": "^4.56.0",
    "yaml": "^2.8.2"
  }
}
