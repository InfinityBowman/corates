{
  "name": "@corates/mcp",
  "version": "2.0.0",
  "license": "PolyForm-Noncommercial-1.0.0",
  "bin": {
    "corates-mcp": "./dist/server.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "nohup node dist/server.js > /dev/null 2>&1 & echo 'MCP server started in background'",
    "stop": "pkill -f 'node.*server.js' || echo 'No MCP server running'",
    "scrape": "tsx src/scrape-icons.ts",
    "scrape-tanstack-docs": "tsx src/scrape-tanstack-docs.ts",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
