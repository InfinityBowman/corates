---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="CoRATES Learn - Documentation and tutorials for evidence synthesis" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | CoRATES Learn</title>
  </head>
  <body class="bg-slate-50 min-h-screen">
    <!-- Header -->
    <header class="h-14 border-b border-slate-200 bg-white sticky top-0 z-50">
      <div class="max-w-7xl mx-auto h-full flex items-center px-4 gap-4">
        <a href="/learn" class="flex items-center gap-2 font-semibold text-blue-600">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <span>CoRATES Learn</span>
        </a>

        <nav class="hidden md:flex items-center gap-6 ml-8">
          <a href="/learn/docs/introduction" class="text-sm text-slate-600 hover:text-blue-600 transition-colors">
            Docs
          </a>
          <a href="/learn/tutorials/first-review" class="text-sm text-slate-600 hover:text-blue-600 transition-colors">
            Tutorials
          </a>
          <a href="/learn/glossary" class="text-sm text-slate-600 hover:text-blue-600 transition-colors">
            Glossary
          </a>
        </nav>

        <div class="flex-1" />

        <a
          href="/"
          class="text-sm text-slate-600 hover:text-blue-600 transition-colors"
        >
          Back to App
        </a>
      </div>
    </header>

    <!-- Main content -->
    <main class="max-w-7xl mx-auto px-4 py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-200 bg-white mt-16">
      <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-sm text-slate-500">
            CoRATES - Collaborative Research Appraisal Tool for Evidence Synthesis
          </p>
          <div class="flex items-center gap-4 text-sm text-slate-500">
            <a href="/" class="hover:text-blue-600 transition-colors">App</a>
            <a href="/learn" class="hover:text-blue-600 transition-colors">Learn</a>
            <a href="mailto:support@corates.org" class="hover:text-blue-600 transition-colors">Contact</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
