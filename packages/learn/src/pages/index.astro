---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const docs = await getCollection('docs');
const tutorials = await getCollection('tutorials');

// Group docs by category
const docsByCategory = docs.reduce((acc, doc) => {
  const category = doc.data.category || 'other';
  if (!acc[category]) acc[category] = [];
  acc[category].push(doc);
  return acc;
}, {} as Record<string, typeof docs>);

const categoryLabels: Record<string, string> = {
  'getting-started': 'Getting Started',
  'evidence-synthesis': 'Evidence Synthesis',
  'amstar2': 'AMSTAR-2',
  'systematic-reviews': 'Systematic Reviews',
  'meta-analysis': 'Meta-Analysis',
  'tools-methods': 'Tools & Methods',
};
---

<Layout title="CoRATES Learn">
  <div class="space-y-12">
    <!-- Hero -->
    <div class="text-center">
      <h1 class="text-4xl font-bold text-slate-900 mb-4">
        Learn Evidence Synthesis
      </h1>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Master the methods and tools for conducting high-quality systematic reviews
        and evidence synthesis. From beginner concepts to advanced techniques.
      </p>
    </div>

    <!-- Quick start cards -->
    <div class="grid md:grid-cols-3 gap-6">
      <a href="/learn/docs/introduction" class="group block p-6 bg-white border border-slate-200 rounded-xl hover:border-blue-300 hover:shadow-md transition-all">
        <div class="w-10 h-10 bg-blue-100 text-blue-600 rounded-lg flex items-center justify-center mb-4 group-hover:bg-blue-600 group-hover:text-white transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <h3 class="font-semibold text-slate-900 mb-2 group-hover:text-blue-600 transition-colors">
          Getting Started
        </h3>
        <p class="text-sm text-slate-600">
          New to CoRATES? Start here to learn the basics of the platform.
        </p>
      </a>

      <a href="/learn/tutorials/first-review" class="group block p-6 bg-white border border-slate-200 rounded-xl hover:border-blue-300 hover:shadow-md transition-all">
        <div class="w-10 h-10 bg-green-100 text-green-600 rounded-lg flex items-center justify-center mb-4 group-hover:bg-green-600 group-hover:text-white transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="font-semibold text-slate-900 mb-2 group-hover:text-green-600 transition-colors">
          First Review Tutorial
        </h3>
        <p class="text-sm text-slate-600">
          Follow along as we complete your first systematic review assessment.
        </p>
      </a>

      <a href="/learn/glossary" class="group block p-6 bg-white border border-slate-200 rounded-xl hover:border-blue-300 hover:shadow-md transition-all">
        <div class="w-10 h-10 bg-purple-100 text-purple-600 rounded-lg flex items-center justify-center mb-4 group-hover:bg-purple-600 group-hover:text-white transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
          </svg>
        </div>
        <h3 class="font-semibold text-slate-900 mb-2 group-hover:text-purple-600 transition-colors">
          Glossary
        </h3>
        <p class="text-sm text-slate-600">
          Look up key terms and concepts in evidence synthesis.
        </p>
      </a>
    </div>

    <!-- Browse by topic -->
    <div class="space-y-8">
      <h2 class="text-2xl font-semibold text-slate-900">
        Browse by Topic
      </h2>

      <div class="grid md:grid-cols-2 gap-6">
        {Object.entries(docsByCategory).map(([category, categoryDocs]) => (
          <div class="p-6 bg-white border border-slate-200 rounded-xl">
            <h3 class="font-semibold text-slate-900 mb-4">
              {categoryLabels[category] || category}
            </h3>
            <ul class="space-y-2">
              {categoryDocs.slice(0, 5).map((doc) => (
                <li>
                  <a 
                    href={`/learn/docs/${doc.slug}`}
                    class="inline-flex items-center gap-1 text-sm text-blue-600 hover:text-blue-800"
                  >
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    {doc.data.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <!-- Tutorials section -->
    {tutorials.length > 0 && (
      <div class="space-y-6">
        <h2 class="text-2xl font-semibold text-slate-900">
          Tutorials
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {tutorials.map((tutorial) => (
            <a 
              href={`/learn/tutorials/${tutorial.slug}`}
              class="group block p-4 bg-white border border-slate-200 rounded-lg hover:border-green-300 hover:shadow-sm transition-all"
            >
              <div class="flex items-center gap-2 text-xs mb-2">
                <span class="bg-green-100 text-green-700 px-2 py-0.5 rounded font-medium">
                  Tutorial
                </span>
                <span class="bg-slate-100 text-slate-600 px-2 py-0.5 rounded">
                  {tutorial.data.difficulty}
                </span>
                {tutorial.data.estimatedTime && (
                  <span class="text-slate-500">
                    {tutorial.data.estimatedTime}
                  </span>
                )}
              </div>
              <h3 class="font-medium text-slate-900 group-hover:text-green-600 transition-colors">
                {tutorial.data.title}
              </h3>
              <p class="text-sm text-slate-600 mt-1 line-clamp-2">
                {tutorial.data.description}
              </p>
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Help section -->
    <div class="bg-blue-50 border border-blue-100 rounded-xl p-6 text-center">
      <h3 class="text-lg font-semibold text-blue-900 mb-2">
        Need Help?
      </h3>
      <p class="text-blue-700 mb-4">
        Can't find what you're looking for? Have questions about evidence synthesis methods?
      </p>
      <a
        href="mailto:support@corates.org"
        class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 font-medium"
      >
        Contact Support
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</Layout>
