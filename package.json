{
  "name": "corates",
  "version": "0.0.1",
  "private": true,
  "description": "Cloudflare Workers/Durable Objects web app",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:landing": "pnpm --filter landing dev",
    "dev:workers": "pnpm --filter workers dev",
    "dev:front": "concurrently -k -n landing,web -c yellow,blue \"pnpm --filter landing dev\" \"pnpm --filter web dev\"",
    "build": "pnpm --recursive run build",
    "build:web": "pnpm --filter web run build",
    "build:landing": "pnpm --filter landing run build",
    "deploy": "pnpm run deploy:workers && pnpm run deploy:landing",
    "deploy:web": "pnpm --filter web run deploy",
    "deploy:workers": "pnpm --filter workers run deploy",
    "deploy:reset:workers": "pnpm --filter workers run db:reset:prod",
    "deploy:landing": "pnpm --filter landing run deploy",
    "clear-workers": "pnpm --filter workers run clear-workers",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "initialize-mcp": "pnpm --filter mcp run scrape:all",
    "test:ui": "pnpm --filter web test",
    "test": "pnpm --recursive run test",
    "typecheck": "pnpm --recursive run typecheck",
    "logs": "pnpm --filter workers run logs",
    "deps:check": "pnpm -r outdated",
    "deps:update": "pnpm -r up",
    "deps:update:latest": "pnpm -r up --latest",
    "user:make-admin:prod": "pnpm --filter @corates/workers run user:make-admin:prod",
    "user:make-admin:local": "pnpm --filter @corates/workers run user:make-admin:local",
    "loc": "node ./scripts/loc-report.mjs",
    "docs": "npx serve ./docs/architecture -l 3020",
    "openapi": "pnpm --filter @corates/workers run openapi:generate"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "durable-objects",
    "solidjs"
  ],
  "author": "Jacob Maynard",
  "license": "PolyForm-Noncommercial-1.0.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/parser": "^8.50.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-solid": "^0.14.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.2",
    "wrangler": "^4.56.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.0.0"
}
